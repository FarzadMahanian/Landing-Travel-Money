html.no-js(lang='en')
    // <![endif]
    head
        // meta charec set
        meta(charset='utf-8')
        // Always force latest IE rendering engine or request Chrome Frame
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        // Page Title
        title= $i18n.faq.title
        // Meta Description
        meta(name='description', content= $i18n.faq.description)

        // Mobile Specific Meta
        meta(name='viewport', content='width=device-width, initial-scale=1')
        // Google Font
        // <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
        //
          CSS
          ==================================================
        // &lt;!&ndash; Fontawesome Icon font &ndash;&gt;
        // <link rel="stylesheet" href="css/font-awesome.min.css">
        // &lt;!&ndash; Twitter Bootstrap css &ndash;&gt;
        // <link rel="stylesheet" href="css/bootstrap.min.css">
        // &lt;!&ndash; jquery.fancybox  &ndash;&gt;
        // <link rel="stylesheet" href="css/jquery.fancybox.css">
        // &lt;!&ndash; animate &ndash;&gt;
        // <link rel="stylesheet" href="css/animate.css">
        // &lt;!&ndash; Main Stylesheet &ndash;&gt;
        // <link rel="stylesheet" href="css/main.css">
        // &lt;!&ndash; media-queries &ndash;&gt;
        // <link rel="stylesheet" href="css/media-queries.css">
        link(rel='stylesheet', href='../css/style.css')
        // Modernizer Script for old Browsers
        script(src='../js/modernizr-2.6.2.min.js')
    body#home
        // preloader
        #preloader
            img(src='../img/preloader.gif', alt='Preloader')
        // end preloader
        //
          Fixed Navigation
          ====================================
        header.navbar-fixed-top.navbar(id='', style='background-color: rgba(4, 39, 87, 1);')
            ul#header-link
                li
                    a(href='http://panel.persiatravelmoney.com/')
                        i.fa.fa-user(aria-hidden='true')
                        | #{$i18n.global.logIn}
                li
                    a(href='http://panel.persiatravelmoney.com/#/signup')
                        i.fa.fa-credit-card-alt(aria-hidden='true')
                        | #{$i18n.global.applyForCard}
            #language-switch
                p#toggleLanguageSwitch #{$i18n.lanCode}
                ul
                    each locale in $i18n.locales
                        li
                            if locale.code != $i18n.lanCode
                                a(href='../' + locale.code)
                                    | #{locale.name}
            .container-fluid
                .navbar-header
                    // responsive nav button
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                        span.sr-only Toggle navigation
                        i.fa.fa-bars.fa-2x
                    // /responsive nav button
                    // logo
                    a.navbar-brand(href='index.html')
                        h1#logo
                            img(src='../img/logo-travelmoney-color.svg', alt='Persia Travel Money')
                    // /logo
                // main nav
                nav.collapse.navbar-collapse.navbar-right(role='navigation')
                    ul.nav.navbar-nav
                        li
                            a(href='index.html#home') #{$i18n.topMenu.home}
                        li
                            a(href='index.html#features') #{$i18n.topMenu.features}
                        li
                            a(href='index.html#obtain-travel-money') #{$i18n.topMenu.orderCard}
                        li
                            a(href='index.html#card-highlights') #{$i18n.topMenu.cardHighlights}
                        li
                            a(href='index.html#about-us') #{$i18n.topMenu.aboutUs}
                // /main nav
        //
          End Fixed Navigation
          ====================================
        //
          FAQ
          ====================================
        section#FAQ.faq.clearfix(style='padding-top: 130px;')
            .container
                .row
                    .col-xs-12.sec-title.text-center.wow.rubberBand.animated(data-wow-duration='300ms')
                        h2 #{$i18n.faq.header}
                        .devider
                            i.fa.fa-check.fa-2x
                    .col-xs-12.sec-sub-title.text-center.wow.fadeInUp.animated(data-wow-duration='300ms', data-wow-delay='300ms')
                        h3 #{$i18n.faq.text1}
                        p #{$i18n.faq.text2}
                    ul.col-xs-10.col-xs-offset-1.col-sm-12.col-sm-offset-0.list.wow.fadeInDown.animated(data-wow-duration='300ms', data-wow-delay='300ms')
                        each questionAnswer in $i18n.faq.questionsAnswers
                            li.list-item.wow.fadeInLeft.animated(data-wow-duration='300ms', data-wow-delay='300ms')
                                i.fa.fa-quora.fa-1x.icon(aria-hidden='true')
                                .list-title
                                    | #{questionAnswer.question}
                                .list-text
                                    each subAnswer in questionAnswer.subAnswers
                                        p.ml-40= subAnswer
                                    p| !{questionAnswer.answer}

        //
          End FAQ
          ====================================
        footer#footer.footer.text-center
            .container
                .row
                    .col-xs-12.links
                        each link in $i18n.footerMenu.links
                            p.wow.fadeInLeft.animated(data-wow-duration='300ms', data-wow-delay='300ms')
                                a(href= link.link) #{link.title}
                .row.pt-40
                    .col-md-12
                        p.copyright.text-center #{$i18n.copyright}
                .text-center.img
                    img(src='../img/logo-travelmoney-color.svg', alt='Travel Money')
        a#back-top(href='javascript:void(0);')
            i.fa.fa-angle-up.fa-2x
        //
          Essential jQuery Plugins
          ==================================================
        // Main jQuery
        script(src='../js/jquery/dist/jquery.min.js')
        script(src='../js/requirejs/require.js')
        // Single Page Nav
        script(src='../js/jquery.singlePageNav.min.js')
        // Twitter Bootstrap
        script(src='../js/bootstrap-sass/assets/javascripts/bootstrap.min.js')
        // jquery.fancybox.pack
        script(src='../js/jquery.fancybox.pack.js')
        // jquery.mixitup.min
        script(src='../js/jquery.mixitup.min.js')
        // jquery.parallax
        script(src='../js/jquery.parallax-1.1.3.js')
        // jquery.countTo
        script(src='../js/jquery-countTo.js')
        // jquery.appear
        script(src='../js/jquery.appear.js')
        // jquery easing
        script(src='../js/jquery.easing.min.js')
        // jquery easing
        script(src='../js/wow.min.js')
        script.
            var wow = new WOW({
                        boxClass: 'wow',      // animated element css class (default is wow)
                        animateClass: 'animated', // animation css class (default is animated)
                        offset: 120,          // distance to the element when triggering the animation (default is 0)
                        mobile: false,       // trigger animations on mobile devices (default is true)
                        live: true        // act on asynchronously loaded content (default is true)
                    }
            );
            wow.init();
        // Custom Functions
        script(src='../js/custom.js')
